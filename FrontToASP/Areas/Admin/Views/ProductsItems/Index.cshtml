@model IEnumerable<ProductItems>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/Admin/Prducts/Details/@item.Id" class="btn btn-success"><i class="material-icons">remove_red_eye</i></a>
                    <a href="~/Admin/Prducts/Edit/@item.Id" class="btn btn-warning"><i class="material-icons">edit</i></a>
                    <a href="~/Admin/Prducts/Details/@item.Id" class="btn btn-danger"><i class="material-icons">delete</i></a>
                </td>
                <td><img style="width:50px" src="~/IMG/@item.Image" alt="@item.ImageAlt" /></td>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }

    </tbody>
</table>
<a class="btn btn-block btn-lg" href="/Admin/ProductsItems/Create">Crate</a>

