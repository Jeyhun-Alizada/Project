@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Header</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/Admin/Prducts/Details/@item.Id" class="btn btn-success"><i class="material-icons">remove_red_eye</i></a>
                    <a href="~/Admin/Prducts/Edit/@item.Id" class="btn btn-warning"><i class="material-icons">edit</i></a>
                    <a href="~/Admin/Prducts/Details/@item.Id" class="btn btn-danger"><i class="material-icons">delete</i></a>
                </td>
                <td>@item.Header</td>
                <td>@item.Description</td>
            </tr>
        }

    </tbody>
</table>
<button class="btn btn-block btn-lg">Crate</button>